{
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx", 
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true, 
    "paths": {
      "@/*": ["./src/*"] 
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
